<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Phoneshop servlet api training</display-name>

    <context-param>
        <param-name>init</param-name>
        <param-value>true</param-value>
    </context-param>

    <listener>
        <listener-class>
            com.es.phoneshop.web.listener.SampleDataServletContextListener
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>com.es.phoneshop.web.servlet.ProductListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>product</servlet-name>
        <servlet-class>com.es.phoneshop.web.servlet.ProductDetailsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>product</servlet-name>
        <url-pattern>/products/product/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>com.es.phoneshop.web.servlet.CartPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkout</servlet-name>
        <servlet-class>com.es.phoneshop.web.servlet.CheckoutPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderOverview</servlet-name>
        <servlet-class>com.es.phoneshop.web.servlet.OrderOverviewPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderOverview</servlet-name>
        <url-pattern>/orderOverview/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>dosFilter</filter-name>
        <filter-class>com.es.phoneshop.web.filter.DosFilter</filter-class>
        <init-param>
            <param-name>timerInterval</param-name>
            <param-value>10000</param-value>
        </init-param>
        <init-param>
            <param-name>errorTimerInterval</param-name>
            <param-value>15000</param-value>
        </init-param>
        <init-param>
            <param-name>maxRequestCount</param-name>
            <param-value>20</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>dosFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error/Error404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/pages/error/Error500.jsp</location>
    </error-page>

    <error-page>
        <error-code>429</error-code>
        <location>/WEB-INF/pages/error/Error429.jsp</location>
    </error-page>

</web-app>
